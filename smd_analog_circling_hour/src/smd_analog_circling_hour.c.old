void handle_deinit(AppContextRef ctx) {
  (void)ctx;

  rotbmp_deinit_container(&hour_image_container);
}




void handle_tick(AppContextRef ctx, PebbleTickEvent *t) {
  (void)t;

	PblTm currentTime;
	static char timeText[] = "00";

  first_run = "false";
	font_minutes_word.old_text = font_minutes_word.text;
	hours_word.old_text = hours_word.text;
	
	
	get_time(&currentTime);
	
	string_format_time(timeText, sizeof(timeText), "%M", &currentTime);
	font_minutes_word.text = timeText;
	
//	string_format_time(timeText, sizeof(timeText), "%H", &currentTime);
//	hours_word.text = timeText;
	
	update_word(&font_minutes_word);
  update_hand_positions();
}





void handle_init(AppContextRef ctx) {
